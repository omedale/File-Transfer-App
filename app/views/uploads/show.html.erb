<div class="text-center">
  <div class="cover-container d-flex h-100 p-3 mx-auto flex-column">
    <main role="main" class="inner cover">
     <%= link_to 'Home', root_path, method: :get, :class => 'btn btn-secondary'  %>
      <h1 class="cover-heading"><%= @my_file.title %></h1>
       <p class="cover-heading"><%= @my_file.description %></p>
    <div>
      <% if @my_file.files.count < 1 %>
          <h4 class="text-center no-record"> No files yet available for download </h4>
      <% else %>
      <table class="table table-dark">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">File</th>
            <th scope="col">Action</th>
          </tr>
        </thead>
        <tbody>
        <%  @my_file.files.each_with_index do |file, index| %>
          <tr>
            <th scope="row"><%= (index + 1) %></th>
            <th scope="row">File <%= (index + 1) %></th>
            <td>
              <%= link_to 'Download', rails_blob_path(file, disposition: "attachment"), :class => 'btn btn-primary btn-sm download', download: ''  %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
       <% end %>
    </div>
    </main>
  </div>
</div>


